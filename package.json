{
  "name": "webpack-config-2019",
  "version": "1.0.0",
  "description": "Modern webpack config",
  "author": "abugleev",
  "private": true,
  "scripts": {
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack",
    "dev": "cross-env NODE_ENV=development npm run webpack-dev-server -- --env.mode development --watch",
    "prod": "cross-env NODE_ENV=production npm run webpack -- --env.mode production",
    "prod:analyze": "npm run prod -- --env.presets analyze",
    "prod:compress": "npm run prod -- --env.presets compress",
    "debug": "node --inspect-brk ./src/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
